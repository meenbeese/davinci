generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id             Int      @id @default(autoincrement())
  name           String?
  email          String   @unique
  password       String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  // Education Levels
  kindergarten   Boolean
  elementary     Boolean
  middle         Boolean
  high           Boolean
  
  // Subject Areas
  art            Boolean
  business       Boolean
  english        Boolean
  french         Boolean
  math           Boolean
  music          Boolean
  science        Boolean
  social_sciences Boolean

  // You might want to add relations here if needed
  // stories        Story[]
}